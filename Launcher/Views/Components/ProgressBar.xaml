<UserControl x:Class="Launcher.Views.Components.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Launcher.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Border x:Name="ProgressBarLine" Background="White" Style="{ StaticResource BorderRounding15 }"/>

        <Border Background="#B229D4" Style="{ StaticResource BorderRounding15 }" Width="{ Binding ProgressWidth, RelativeSource={RelativeSource AncestorType=UserControl}}" d:Width="500" HorizontalAlignment="Left"/>
        
        <TextBlock Text="{ Binding LoadText, RelativeSource={RelativeSource AncestorType=UserControl}}"  d:Text="Загрузка..." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
    </Grid>
</UserControl>
