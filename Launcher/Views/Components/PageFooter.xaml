<UserControl x:Class="Launcher.Views.Components.PageFooter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Launcher.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Foreground="White">
            <Run Text="(c)NightfallCraft Team"/>
            <LineBreak/>
            <Run Text="Current Version:"/>
            <Run Text="{Binding Path=Version, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </TextBlock>
    </Grid>
</UserControl>
